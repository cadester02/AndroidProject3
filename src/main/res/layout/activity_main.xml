<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="?attr/colorPrimary"
            android:elevation="4dp">

            <!-- Custom TextView inside the toolbar -->
            <TextView
                android:id="@+id/toolbarText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Project 3"
                android:textSize="20sp"
                android:textColor="#FFFFFF"
                android:layout_centerInParent="true"
                android:layout_alignParentStart="true"
                android:paddingStart="16dp"/>
        </androidx.appcompat.widget.Toolbar>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:layout_below="@id/toolbar"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="16dp"
            android:src="@drawable/img_5394" />

        <Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Gray Cat"
            android:backgroundTint="@color/grayCatButton"
            android:textColor="#FFFFFF"
            android:layout_below="@id/imageView"
            android:layout_marginTop="24dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/baseline_assignment_ind_24"/>

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Propeller Cat"
            android:backgroundTint="@color/propellerCatButton"
            android:textColor="#FFFFFF"
            android:layout_below="@id/button1"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/baseline_air_24"/>

        <Button
            android:id="@+id/button3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pikachu"
            android:backgroundTint="@color/pikachuButton"
            android:textColor="#FFFFFF"
            android:layout_below="@id/button2"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true"
            android:drawableLeft="@drawable/baseline_bolt_24"/>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>